<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_background"
    android:padding="16dp">

    <!-- Header with User and Logout -->

    <!-- Search Bar -->

    <!-- Highlights Section -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="63dp">

        <TextView
            android:id="@+id/hi_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Hi, User"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/logout_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_logout_24" />
    </RelativeLayout>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/searchBG"
        android:drawableLeft="@drawable/baseline_search_24"
        android:hint="Search News"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highlights"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Highlight Image (Breaking News) -->

    <!-- News For You Section -->
    <ImageView
        android:id="@+id/highlight_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Breaking News Image"
        android:src="@drawable/Item1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="265dp" />

    <!-- News Card 1 -->

    <!-- Repeat the above News Card layout for more news cards -->

    <!-- Footer with Navigation Tabs -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News For You"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="240dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_card_background"
        android:orientation="horizontal"
        android:padding="12dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="489dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Sports News Image"
            android:src="@drawable/Imagenewsforyou" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Title"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/news_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description..."
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Arrow Icon"
            android:src="@drawable/outline_add_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/footer_background"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="826dp">

        <ImageView
            android:id="@+id/tab_sports"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Sports Tab"
            android:src="@drawable/running" />

        <ImageView
            android:id="@+id/tab_fot_events"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:contentDescription="FOT Events Tab"
            android:src="@drawable/el" />

        <ImageView
            android:id="@+id/tab_academics"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:contentDescription="Academics Tab"
            android:src="@drawable/Icon3" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
